#include <string.h>
#include <cstdlib>
#include <iostream>
#include <fstream>
#include <math.h>
using namespace std;

int getLength(const char * sss) {
	int i = 0;
	char c = 'X';
	while(c != '\0') {
		c = sss[i];
		if(c != '\0') i++;
	}
	return i;
}

int main() {
    char s[100];
    
    cout << "Input string:" << "\n";
    cin >> s;
    
    cout << "Your string:" << "\n";
    cout << s << "\n";
    
    int n = getLength(s);
    cout << "Length: " << n << "\n";

    return 0;
}






